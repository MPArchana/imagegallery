<p id="notice"><%= notice %></p>

<div class="btn-group float-right mt-2" role="group">
  <%= link_to 'New Gallery', new_gallery_path, class: "btn btn-primary" %>
</div>

<h1>Image Gallery</h1>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" class="center">
    <ol class="carousel-indicators">
      <% @galleries.each.with_index(0) do |gallery, index| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index.zero? ? 'active' : '' %>"></li>
      <% end %>
    </ol>

  <div class="carousel-inner" role="listbox" style=" width: 40%; height: 300px !important; margin-left:300px; margin-right:100px;">
    <% @galleries.each.with_index(0) do |gallery, index| %>
      <div class="carousel-item <%= index.zero? ? 'active' : '' %> >
        <%= link_to gallery.image.url do %>
          <%= image_tag(gallery.image, class: 'mx-auto d-block w-100 img-fluid') %>
          
        <% end %>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" style="width: 70%; height: 400px ">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" style="width: 100%; height: 400px ">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<script type="text/javascript">
  $(document).on('turbolinks:load', function(){
     $('.carousel').carousel({
        interval: 2000
     });
  });
</script>


